
@{
    ViewBag.Title = "VistaEnvio";
}

<div class="row">
    <h1>Información del Envío</h1>
    <input type="hidden" value="@ViewBag.IdEnvio" id="envio-id"/>
</div>

<div class="row">

    <div class="col-md-6 col-lg-6 col-xs-12">
            <h2><button type="button" onclick="" class="btn btn-seagreen">Editar</button> Info. del Pedido</h2>
        <table class="table col-push-1">
            <thead></thead>
            <tbody>
                <tr>
                    <th>Folio:</th>
                    <td id="folio"></td>
                </tr>
                <tr>
                    <th>Fecha:</th>
                    <td id="fecha"></td>
                </tr>
                <tr>
                    <th>Registrado por:</th>
                    <td id="usuario"></td>
                </tr>
                <tr>
                    <th>Precio:</th>
                    <td id="precio"></td>
                </tr>
                <tr>
                    <th>Estado:</th>
                    <td id="estado"></td>
                </tr>
            </tbody>
        </table>
        
       
      
    </div>

    <div class="col-md-6 col-lg-6 col-xs-12">

        <h2><button type="button" onclick="" class="btn btn-seagreen">Editar</button> Info. del Cliente</h2> 
        <table class="table col-push-1">
            <thead></thead>
            <tbody>
                <tr>
                    <th>Nombre:</th>
                    <td id="nombre-cliente"></td>
                </tr>
                <tr>
                    <th>Domicilio:</th>
                    <td id="domicilio-cliente"></td>
                </tr>
                <tr>
                    <th>Teléfono:</th>
                    <td id="tel-cliente"></td>
                </tr>
                <tr>
                    <th>Correo:</th>
                    <td id="correo-cliente"></td>
                </tr>
                <tr>
                    <th>RFC:</th>
                    <td id="rfc-cliente"></td>
                </tr>
            </tbody>
        </table>

        
        
    </div>

<!--ROW END-->
</div>

<div class="row">

    <div class="col-md-6 col-lg-6 col-xs-12">
        <h2><button type="button" onclick="editarPaquete()" class="btn btn-seagreen">Editar</button> Info. del Paquete</h2> 
        <table class="table col-push-1">
            <thead></thead>
            <tbody>
                <tr>
                    <th>Peso:</th>
                    <td id="peso"></td>
                </tr>
                <tr>
                    <th>Dimensiones:</th>
                    <td id="dimensiones"></td>
                </tr>
                <tr>
                    <th>Tipo de Contenido:</th>
                    <td id="tipo-cont"></td>
                </tr>
                <tr>
                    <th>Descripcion:</th>
                    <td id="descripcion"></td>
                </tr>
            </tbody>
        </table>

    </div>

    <div class="col-md-6 col-lg-6 col-xs-12">
        <h2><button type="button" onclick="" class="btn btn-seagreen">Editar</button> Info. del Destinatario</h2> 
        <table class="table col-push-1">
            <thead></thead>
            <tbody>
                <tr>
                    <th>Nombre:</th>
                    <td id="nombre-dest"></td>
                </tr>
                <tr>
                    <th>Domicilio:</th>
                    <td id="domicilio-dest"></td>
                </tr>
                <tr>
                    <th>C.P.:</th>
                    <td id="cp-dest"></td>
                </tr>
                <tr>
                    <th>Ciudad:</th>
                    <td id="ciudad-dest"></td>
                </tr>
                <tr>
                    <th>Estado:</th>
                    <td id="estado-dest"></td>
                </tr>
                <tr>
                    <th>Teléfono:</th>
                    <td id="telefono-dest"></td>
                </tr>
                <tr>
                    <th>Correo:</th>
                    <td id="correo-dest"></td>
                </tr>
                <tr>
                    <th>Recibe:</th>
                    <td id="recibe"></td>
                </tr>
            </tbody>
        </table>  
    </div>

<!--ROW END-->
</div>

<div class="row">

    <div class="container">


        <div class="row">

            <h2>Historial de Recorrido:</h2>

            <div class="btn-group">
                <button type="button" onclick="" class="btn btn-seagreen">Agregar ubicación</button>
            </div>
        </div>


        <br />

        <div class="row">

            <table class="table tabla-ubicacion table-nonfluid col-xs-2">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Ubicacion</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>asdfasdf</td>
                        <td>asdfasd</td>
                    </tr>
                </tbody>
            </table>

        </div>


    </div>

<!--ROW END-->
</div>


<!--MODALS-->
<div class="modal fade" id="modal-" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header modal-header-sienna">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Nuevo Usuario</h4>
            </div>
            <div class="modal-body">

                <div class="row">

                    <form action="" class="col-xs-10 col-xs-push-1">
                        <div class="form-group">
                            <label for="peso">Peso:</label>
                            <input type="text" class="form-control input-sm" name="peso" id="peso-mod">
                        </div>
                        <div class="form-group">
                            <label for="dimensiones">Dimensiones:</label>
                            <input type="text" class="form-control input-sm" name="dimensiones" id="dimensiones-mod">
                        </div>
                        <div class="form-group">
                            <label for="tipoCont">Tipo de Contenido:</label>
                            <input type="email" class="form-control input-sm" name="tipoCont" id="tipoCont-mod">
                        </div>
                        <div class="form-group">
                            <label for="descripción">Descripción:</label>
                            <input type="text" class="form-control input-sm" name="descripcion" id="descripcion-mod">
                        </div>

                        <button type="button" class="btn btn-seagreen pull-right shadow" onclick="editarPaquete()">Registrar</button>
                    </form>

                    <!--Row form end-->
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>


@Scripts.Render("~/Scripts/js/vista-envio.js")



