
@{
    ViewBag.Title = "EditInfoDestinatario";
}

<div class="modal-header modal-header-sienna">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Info. del Destinatario</h4>
</div>
<div class="modal-body">

    <div class="row">
        <input type="hidden" name="id" value="" id="id-d" />
        <form action="" class="col-xs-10 col-xs-push-1">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control input-sm" name="nombre" id="nombre-d-mod">
            </div>
            <div class="form-group">
                <label for="domicilio">Domicilio:</label>
                <input type="text" class="form-control input-sm" name="domicilio" id="domicilio-d-mod">
            </div>
            <div class="form-group">
                <label for="codigo-postal">C.P.:</label>
                <input type="text" class="form-control input-sm" name="codigo-postal" id="cp-d-mod">
            </div>
            <div class="form-group">
                <label for="ciudad">Ciudad:</label>
                <input type="text" class="form-control input-sm" name="telefono" id="ciudad-d-mod">
            </div>
            <div class="form-group">
                <label for="Estado">Estado:</label>
                <input type="text" class="form-control input-sm" name="estado" id="estado-d-mod">
            </div>
            <div class="form-group">
                <label for="telefono">Teléfono:</label>
                <input type="text" class="form-control input-sm" name="telefono" id="telefono-d-mod">
            </div>
            <div class="form-group">
                <label for="correo">Correo:</label>
                <input type="text" class="form-control input-sm" name="correo" id="correo-d-mod">
            </div>
            <div class="form-group">
                <label for="recibe">Recibe:</label>
                <input type="text" class="form-control input-sm" name="recibe" id="recibe-d-mod">
            </div>

            <button type="button" class="btn btn-seagreen pull-right shadow" onclick="actualizarDestinatario()">Guardar Cambios</button>
        </form>

        <!--Row form end-->
    </div>

    <!--Modal body-->
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
</div>