
@{
    ViewBag.Title = "EditInfoCliente";
}

<div class="modal-header modal-header-sienna">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Info. del Cliente</h4>
</div>
<div class="modal-body">

    <div class="row">
        <input type="hidden" name="id" value="" id="id-c" />
        <form action="" class="col-xs-10 col-xs-push-1">
            <div class="form-group">
                <label for="nombre">Nombre:</label>
                <input type="text" class="form-control input-sm" name="nombre" id="nombre-c-mod">
            </div>
            <div class="form-group">
                <label for="domicilio">Domicilio:</label>
                <input type="text" class="form-control input-sm" name="domicilio" id="domicilio-c-mod">
            </div>
            <div class="form-group">
                <label for="telefono1">Teléfono 1:</label>
                <input type="text" class="form-control input-sm" name="telefono1" id="telefono1-c-mod">
            </div>
            <div class="form-group">
                <label for="telefono2">Teléfono 2 (opcional):</label>
                <input type="text" class="form-control input-sm" name="telefono2" id="telefono2-c-mod">
            </div>
            <div class="form-group">
                <label for="telefono3">Teléfono 3 (opcional):</label>
                <input type="text" class="form-control input-sm" name="telefono3" id="telefono3-c-mod">
            </div>
            <div class="form-group">
                <label for="correo">Correo:</label>
                <input type="text" class="form-control input-sm" name="correo" id="correo-c-mod">
            </div>
            <div class="form-group">
                <label for="rfc">RFC (opcional):</label>
                <input type="text" class="form-control input-sm" name="rfc" id="rfc-c-mod">
            </div>

            <button type="button" class="btn btn-seagreen pull-right shadow" onclick="actualizarCliente()">Guardar Cambios</button>
        </form>

        <!--Row form end-->
    </div>

    <!--Modal body-->
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
</div>